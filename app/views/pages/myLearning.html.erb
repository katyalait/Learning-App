  <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">My Topics</h1>
            </div>
        </div>
		<!-- Search Bar -->		
		<div class="row">
			<div class="col-lg-6">
				<form role="form">
                    <div class="form-group input-group">
                        <input type="text" class="form-control" placeholder="Search Learning Topics">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Add Topic</i></button>
                            </span>
                    </div>
                </form>		
			</div>
		</div>
		<!-- Table -->
		<div class="col-lg-6">
			<div class="panel panel-default">
                <div class="panel-heading">
                    My Learning Topics
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Learning Topic</th>
                                    <th>Hours Spent Learning</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>1</td>
                                    <td>Java</td>
                                    <td>1.2</td>
                                </tr>
                                <tr>
                                    <td>2</td>
                                    <td>Art</td>
                                    <td>0.3</td>
                                </tr>
                                <tr>
                                    <td>3</td>
                                    <td>History</td>
                                    <td>2</td>
                                 </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
			</div>
        </div>
		<!-- Pie Chart -->
		<div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Time Spent Learning Topics:
                </div>
				<div class="panel-body">
                    <div class="flot-chart">
                        <div class="flot-chart-content" id="flot-pie-chart"></div>
                    </div>
                </div>
			</div>
		</div>
    
</div>
	
</body>
</html>
